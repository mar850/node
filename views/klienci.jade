            tr
              td Firma:
              td 
                input#firma(name='firma', type='text')
            tr
              td Adres:
              td 
                input#adres(name='adres', type='text')
            tr
              td Miasto:
              td 
                input#miasto(name='miasto', type='text')
            tr
              td Wojewodztwo:
              td 
                input#wojew(name='wojew', type='text')
            tr
              td Kod Pocztowy:
              td 
                input#kod_poczt(name='kod_poczt', type='text')
            tr
              td Kraj:
              td 
                input#kraj(name='kraj', type='text')
            tr
              td
              td
                label
                  input#button_add_task(type='submit', name='button_add_task', value='dodaj klienta')
          if (items.length)
          each klienci in items
            #box
              .box-top Klient: #{klienci.idklienta}
              .box-panel
                h3 #{klienci.imie} #{klienci.nazwisko} <br />
                h3 #{klienci.firma}<br />
                h3 #{klienci.adres}<br />
                h3 #{klienci.kod_poczt} #{klienci.miasto} <br />
                h3 Wojewodztwo #{klienci.wojew}, #{klienci.kraj} <br />
